<h2>user login form:</h2>

<form method="post">
    <p>
        <label>Name:</label><br />
        <input type="text" name="username" />
    </p>
    <p>
        <label>Age:</label><br />
        <input type="number" name="age" />
    </p>
    <p>
        <label>Comment:</label><br />
        <textarea name="comment"></textarea>
    </p>
    <p>
        <label>Married:</label><br />
        <input type="checkbox" name="married" checked />
    </p>
    <p>
        <label>Skill:</label><br />
        <input type="radio" name="skill" value="java" />
        <label>Java</label><br />
        <input type="radio" name="skill" value="cpp" checked/>
        <label>C++</label><br />
        <input type="radio" name="skill" value="python" />
        <label>Python</label><br />
    </p>
    <p>
        <label>City:</label><br />
        <select multiple name="city">
            <option value="moscow">Moscow</option>
            <option value="tula">Tula</option>
            <option value="orel">Orel</option>
        </select>
    </p>

    <input type="submit" />
</form>
