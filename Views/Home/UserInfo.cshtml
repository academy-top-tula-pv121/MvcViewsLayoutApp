<h2>User:</h2>
<h3>
    Name: @ViewBag.Name, 
    Age: @ViewBag.Age, 
    Comment: @ViewBag.Comment
    Married:
    @if(ViewBag.Married == "on")
    {
        <span>Yes</span>
    }
    else
    {
        <span>No</span>
    }
    Skill: @ViewBag.Skill
    City:
    @foreach (var item in ViewBag.City)
    {
        <span>@item, </span>
    }
     
</h3>
