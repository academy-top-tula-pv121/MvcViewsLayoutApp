<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Site | @ViewBag.Title</title>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <div><a href="/Home/Index">Home page</a> | <a href="/Home/About">About page</a></div>
    <div>
        @RenderBody()
    </div>
    <footer>
        @if(IsSectionDefined("Footer"))
        {
            @RenderSection("Footer", false);
        }
        else
        {
            <h6>Copyright &copy; MySite @DateTime.Now.Year</h6>
        }

    </footer>
</body>
</html>
